{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended"],
  "env": {
    "node": true,
    "es2022": true
  },
  "globals": {
    "NodeJS": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn",
    "@typescript-eslint/no-explicit-any": "off",
    "no-console": "off",
    "no-unused-vars": "off",
    "no-undef": "off"
  },
  "ignorePatterns": ["dist/", "node_modules/", "*.js"]
}
